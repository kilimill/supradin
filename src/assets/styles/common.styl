html
	overflow-y scroll

body
	font-weight 400
	ff $os

html
	overflow-y scroll

.page__screen
	height 100%
	
.main
	oh()
	z-index 2
	min-width 100%
	min-height vh(800)
	height 100vh
	pos relative
	dfv(stretch, )

	@media $tovw
		min-height vw(800)

	@media $mobile
		height auto
		min-height 100vh

	&__content
		flex-grow 1

	&__img
		top 0
		right 0
		bottom 0
		left 0
		z-index 1
		width 100%
		height 100%
		transition .6s opacity
		pos absolute
		object-fit cover

		&-one
			object-position center

		&-two
			object-position top

		&.show
			opacity 1

		&:not(.show)
			opacity 0

	&.fullheight
		min-height 100vh
		width 100%
		height auto
		height 100%
		// background-image url('~@/assets/img/bckgr.jpg')
		// background-position top
		// background-size cover
		// background-repeat no-repeat
		pos relative

.result
	z-index 2
	pos relative

.copy
	top 39%
	left 0
	// left -21%
	// margin-left vh(30)
	margin-left vh(-330)
	color #E77E40
	font-weight 300
	font-size vh(30)
	line-height 136.69%
	transform rotate(-90deg)
	pos absolute

	@media $tovw
		margin-left vw(-330)
		// margin-left vw(4)
		font-size vw(30)

	@media $mobile
		display none

.btn
	background rgba(255, 255, 255, 0.2)
	border-radius vh(50)
	width vh(242)
	height vh(73)
	pos relative

	@media $tovw
		border-radius vw(50)
		width vw(242)
		height vw(73)

	@media $mobile
		border-radius vm(50)
		width vm(188)
		height vm(68)

	&::before
		content ''
		pos absolute
		left vh(9)
		right vh(7)
		bottom vh(4)
		top vh(4)
		background linear-gradient(89.79deg, #F85900 0.16%, #FF7324 171.68%)
		border-radius vh(50)
		transition opacity .3s

		@media $tovw
			left vw(9)
			right vw(7)
			bottom vw(4)
			border-radius vw(50)
			top vw(4)

		@media $mobile
			left vm(6)
			right vm(5)
			bottom vm(4)
			border-radius vm(50)
			top vm(4)

	&:hover
		&::before
			opacity 0

		.btn__text
			background #FFF4E9
			color #EA7221

		
	
	&__text
		color #FFE1CD
		font-family 'Rotondac'
		line-height vh(66)
		width vh(226)
		box-shadow 0px 1px 4px #E2631E
		border-radius vh(50)
		margin-left vh(9)
		padding-right vh(53)
		letter-spacing 0.04em
		pos relative
		font-weight 700
		transition color .3s, background .3s

		@media $tovw
			border-radius vw(50)
			margin-left vw(9)
			padding-right vw(53)
			line-height vw(65)
			width vw(226)

		@media $mobile
			margin-left vm(7)
			padding-right vm(36)
			line-height vm(60)
			width vm(176)
			border-radius vm(50)

	&__arrow
		pos absolute
		object-fit cover 
		object-position center
		top 50%
		transform translateY(-50%)
		path
			transition fill .3s